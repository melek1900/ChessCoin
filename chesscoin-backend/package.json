{
  "name": "chesscoin-backend",
  "version": "1.0.0",
  "description": "",
  "license": "ISC",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "db:up": "docker compose up -d",
    "db:down": "docker compose down -v",
    "db:reset": "prisma migrate reset --force",
    "db:deploy": "prisma migrate deploy && prisma generate",
    "fresh": "npm run db:down && npm run db:up && prisma migrate reset --force && prisma generate"
  },
  "dependencies": {
    "@prisma/client": "^6.2.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "undici": "^7.15.0",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.3.0",
    "prisma": "^6.2.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.2"
  }
}
